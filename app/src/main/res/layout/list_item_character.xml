<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/layout_character_sheet_header_bg">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="DJ Жаба" />

    <TextView
        android:id="@+id/race_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        tools:text="Грунг" />

    <TextView
        android:id="@+id/dash_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/dash"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:layout_constraintStart_toEndOf="@id/race_text_view"
        app:layout_constraintTop_toBottomOf="@id/name_text_view" />

    <TextView
        android:id="@+id/class_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:layout_constraintStart_toEndOf="@id/dash_text_view"
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        tools:text="Плут" />

    <ImageView
        android:id="@+id/hp_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:importantForAccessibility="no"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_heartbeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dash_text_view"
        app:tint="?attr/colorOnPrimaryContainer" />

    <TextView
        android:id="@+id/hp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:layout_constraintStart_toEndOf="@+id/hp_image_view"
        app:layout_constraintTop_toTopOf="@id/hp_image_view"
        tools:text="8/8" />

</androidx.constraintlayout.widget.ConstraintLayout>