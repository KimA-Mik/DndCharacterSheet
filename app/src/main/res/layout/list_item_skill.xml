<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/layout_skill_background">

        <FrameLayout
            android:id="@+id/skill_checkbox"
            android:layout_width="32dp"
            android:layout_height="32dp">

            <ImageView
                android:id="@+id/skill_check_double_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:src="@drawable/drawable_skill_check_double" />

            <ImageView
                android:id="@+id/skill_check_none_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:src="@drawable/drawable_skill_check_none" />

            <ImageView
                android:id="@+id/skill_check_single_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:src="@drawable/drawable_skill_check_single" />

        </FrameLayout>


        <TextView
            android:id="@+id/skill_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            tools:text="ATHLETICS" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/skill_check_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:background="@drawable/layout_check_button_background">

        <TextView
            android:id="@+id/skill_check_modifier_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnPrimaryContainer"
            tools:text="+4" />
    </FrameLayout>
</LinearLayout>